{
    "name": "goldenpathdigital/laravel-claude",
    "description": "Laravel wrapper for official Anthropic PHP SDK with first-class MCP connector support",
    "keywords": ["laravel", "claude", "anthropic", "ai", "mcp", "llm", "sdk"],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Aaron",
            "email": "aaron@goldenpathdigital.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "anthropic-ai/sdk": "^0.4",
        "illuminate/support": "^10.0|^11.0|^12.0",
        "illuminate/contracts": "^10.0|^11.0|^12.0"
    },
    "require-dev": {
        "orchestra/testbench": "^8.0|^9.0|^10.0",
        "pestphp/pest": "^2.0|^3.0",
        "laravel/pint": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "GoldenPathDigital\\Claude\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "GoldenPathDigital\\Claude\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test:coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "extra": {
        "laravel": {
            "providers": [
                "GoldenPathDigital\\Claude\\ClaudeServiceProvider"
            ],
            "aliases": {
                "Claude": "GoldenPathDigital\\Claude\\Facades\\Claude"
            }
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
